# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.cmd]
charset = latin1
end_of_line = crlf

[*.{ps1,psm1}]
end_of_line = crlf

[*.{sln,*proj}]
charset = utf-8-bom
end_of_line = crlf

[*.cs]
end_of_line = crlf
indent_size = 4

[*.sql]
end_of_line = crlf
indent_size = 4

[*.{xml,config}]
end_of_line = crlf

[*.py]
indent_size = 4
